{{#transactions}}
<div class="list-group-item" id={{id}}>
  <div class="froggy">
    <div class="sender-pic">
      hey there
    </div>
    <br />
    <div class="info">
      <div class="name-and-time">
        <div class="names">
          <b><a href="/users/{{sender.id}}/dealings">{{sender.name}}</a> </b>
          {{charged_or_paid}}
          <b><a href="/users/{{recipient.id}}/dealings">{{recipient.name}}</a></b>
        </div>

        <div class="date">
          {{concise_date}} <span class="glyphicon glyphicon-globe"></span>
        </div>
      </div>

      <div class="description">
        {{description}}
      </div>

      <div class="likes">
        <span class="glyphicon glyphicon-heart" style="color: rgb(061,149,206)"></span> &nbsp;Kevin Kim
      </div>

      <div class="like-comment-cost">
        <div class="like-comment">
          <a href="#">Like</a>
          &emsp;
          <a href="/dealings/{{id}}">Comment</a>
        </div>

        <div style="color: {{green_or_red}}">
          <b>{{show_amount}}</b>
        </div>
      </div>
    </div>
  </div>
</div>

{{/transactions}}
