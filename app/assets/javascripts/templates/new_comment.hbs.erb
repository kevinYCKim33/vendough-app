{{#comment}}
<div class="list-group-item">
  <div class="comment-frog">
    <div class="comment-pic">
      <img src={{user.avatar_url}} width="30" height="30" style="border-radius:50%">
    </div>
    <div class="comment-info">
      <font size="-1.2"><a href="/users/{{user_id}}">{{user.name}}</a>: {{content}} </font>
      <br>
      <small style="color:#a8a8a8">{{exact_date}}</small>
    </div>
  </div>
</div>
{{/comment}}
