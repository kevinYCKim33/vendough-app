<div class="list-group-item">

  <p><b><%= link_to dealing.sender_name, user_dealings_path(dealing.sender) %></b> <%= charged_or_paid(dealing) %>  <b><%= link_to dealing.recipient_name, user_dealings_path(dealing.recipient)%></b></p>
  <div style="position: absolute; top: 10px; right: 15px; width: 90px; text-align:right;">
    <%= dealing.concise_date %> <span class="glyphicon glyphicon-globe"></span>
  </div>
  <% if current_user_involved?(dealing) %>
    <%= content_tag :div, style: format_with_color(dealing) do  %>
      <b><%= plus_or_minus(dealing) %><%= number_to_currency(dealing.amount) %></b>
    <% end %>
  <% end %>
  <p> <%= dealing.description %></p>

  <%= content_tag :a, "View Details", href: "/dealings/#{dealing.id}", type: "button", class: "btn btn-sm btn-default btn-block"  %>

</div>
