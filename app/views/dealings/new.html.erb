
<div class="container" id="test2">
  <center>
    <% if flash[:message] %>
      <p style="color:red;"> <%= flash[:message] %> </p>
    <% end %>
    <h4>Pay or Request</h4>
      <%= form_for @dealing do |f| %>
        <div class="field" >
          <%= f.hidden_field :sender_id, :value => current_user.id %>
          <%= f.label :recipient_id, "Select Contact" %> <br>
          <%= f.collection_select :recipient_id, User.contacts(current_user), :id, :name %>
        </div>

        <br>

        <div class="input-group" >
          <span class="input-group-addon" id="basic-addon2">$</span>
          <%= f.number_field :amount, step: 0.01, class: "form-control", placeholder: "0.00", required: true%>
        </div>

        <br>

        <div class="field" >
          <%= f.text_area :description, class: "form-control", placeholder: "What's it for?" %>
        </div>

        <br>

        <div class="field" >
          <%= f.fields_for :tags, @dealing.tags.build do |tags_fields| %>
            <%= tags_fields.text_area :name, class: "form-control", placeholder: "#add #hashtags #here #like #this"  %>
          <% end %>
        </div>

        <div class= "field">
          <%= f.radio_button :action, 'request'%>
          <%= label :action_request, 'Request' %>
          <%= f.radio_button :action, 'pay' %>
          <%= label :action_pay, 'Pay' %>
          <%#= f.submit "Request", formaction: ask_path, class: "btn btn-md btn-primary" %>
        </div>

        <div class= "action">
          <%= f.submit "Submit", class: "btn btn-md btn-primary" %>
        </div>
      <% end %>
  </center>
</div>
