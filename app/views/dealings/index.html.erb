<div class="container" id="feed">
  <center>
    <div class="btn-group" role="group" aria-label="...">
      <button type="button" class="btn btn-default" id="globe"><span class="glyphicon glyphicon-globe"></button>
      <button type="button" class="btn btn-default" id="associates"><span class="glyphicon glyphicon-user"><span class="glyphicon glyphicon-user"></button>
      <button type="button" class="btn btn-default" id="you"><span class="glyphicon glyphicon-user"></button>
    </div>
      <%# if flash[:message] %>
        <!-- <p style="color:green;"> <%#= flash[:message] %> </p> -->
      <%# end %>
      <%= render 'flash_message' %>


      <% if @dealings.empty? %>
        <p><b>Once you and/or your contacts complete transactions <br>
        they will show up here</b></p>
      <% end %>
  </center>

  <%= content_tag :div, class: "list-group" do %>
    <%= render partial: 'dealing_details', collection: @dealings, as: :dealing%>
  <% end %>

  <!-- Button trigger modal -->
  <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalLong">
    Launch demo modal
  </button>

  <!-- Modal -->
  <div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          ...
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <button type="button" class="btn btn-primary">Save changes</button>
        </div>
      </div>
    </div>
  </div>

</div>
