<div class="container" id="feed">
  <center>
    <% if flash[:message] %>
      <p style="color:green;"> <%= flash[:message] %> </p>
    <% end %>
    <h4><%= current_user.name %></h4>
        <%= current_user_pic %>
    <h5>
      <%= "#{display_credit} in Vendough" %>
      <%= link_to "Add to Fund", add_fund_path, {style: "display: inline", type: "button", class: "btn btn-secondary btn-sm"} %>
    </h5>

      <%= render 'globe_contacts_user' %>

      <%= render 'flash_message' %>

      <% if @dealings.empty? %>
        <p><b>Once you and/or your contacts complete transactions <br>
        they will show up here</b></p>
      <% end %>
  </center>

  <div class="list-group"></div>

</div>
