<div class="list-group-item">
  <p><b><%= link_to transaction.loser_name, transaction.loser %></b> paid <b><%= link_to transaction.gainer_name, transaction.gainer%></b></p>
  <div style="position: absolute; top: 10px; right: 15px; width: 90px; text-align:right;">
    <%= transaction.concise_date %> <span class="glyphicon glyphicon-globe"></span>
  </div>
  <% if current_user_involved?(transaction) %>
    <%= content_tag :div, style: format_with_color(transaction) do  %>
      <b><%= plus_or_minus(transaction) %><%= number_to_currency(transaction.amount.abs) %></b>
    <% end %>
  <% end %>
  <p> <%= transaction.description %></p>

  <a href="/transactions/<%=transaction.id%>" type="button" class="btn btn-primary btn-sm btn-block">View Transaction</a>
  <!-- <a href="#"><p class="exchange-link">Go To Exchange</p></a> -->
</div>
