<h1>Welcome <%=current_user.name %>!</h1>
<h3>You have $<%=display_credit%> in your account.</h3>

<div class="list-group">
  <%@transactions.each do |transaction|%>
  <a href="/transactions/<%= transaction.id %>" class="list-group-item">
    <p><b><%= transaction.disburser_name %></b> paid <b><%= transaction.collector_name %></b></p>
    <div style="position: absolute; top: 5px; right: 10px; width: 90px; text-align:right;">
      <%= transaction.concise_date %> <span class="glyphicon glyphicon-globe"></span>
    </div>
    <p> <%= transaction.description %></p>
  </a>
  <%end%>
</div> <!--list-group -->


<%#= link_to "text", transaction_path(transaction) %>
