<% if current_user.requests_awaiting_approval_by_others.empty? %>
  <div style="text-align: center" >
    <h4>Requests from you</h4>
    <h5>See your requests for money here <br> while they're awaiting approval.</h5>
  </div>
<% end %>

<div class="list-group">
  <%@transactions.each do |transaction|%>
  <div class="list-group-item">
    <p><b> Request to <%= transaction.recipient_name %></b></p>
    <div style="position: absolute; top: 10px; right: 10px; width: 150px; text-align:right;">
      <%= transaction.exact_date %>
    </div>
    <div style="position: absolute; bottom: 40px; right: 10px; width: 150px; text-align:right;">
      <%= number_to_currency(transaction.amount) %>
    </div>
    <p> <%= transaction.description %></p><br>
    <div class= "actions" style="position: absolute; bottom: 5px; right: 10px;">
      <!-- <form action="/challenges/delete" method="post">
        <input id="hidden" type="hidden" name="_method" value="delete">
        <button style="display: inline;" type="submit" class="btn btn-sm btn-default" onclick="return confirm('Are you sure you want to delete this item?');">Cancel</button>
      </form> -->
      <%= form_for transaction, method: :delete do |f| %>
        <%= f.submit "Cancel", class: "btn btn-sm btn-default", onclick: "return confirm('Cancel the request?');"  %>
      <% end %>
    </div>
  </div>
  <%end%>
</div> <!--list-group -->
